<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="consejo_admin_template">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="report.internal_layout">
                    <div class="page">
                        <center><h1><strong>Ficha del Consejo Comunal</strong></h1></center>
                        <br/>
                        <br/>
                        <center><h3><strong>Nombre: </strong><span t-field='o.name' /></h3></center>
                        <center><h4>Codigo SITUR: <span t-field='o.situr_code' /></h4></center>
                        <br/>
                        <br/>
                        <h4><strong>RIF: </strong><span t-field='o.rif' /></h4>
                        <h4><strong>Telefono: </strong><span t-field='o.phone' /></h4>
                        <h4><strong>Correo: </strong><span t-field='o.login' /></h4>
                        <h4><strong>Fecha de creacion: </strong><span t-field='o.creation_date' /></h4>
                        <br/>
                        <br/>
                        <h4><strong>Ubicacion</strong></h4>
                        <br/>
                        <table width='900'>
							<tr>
								<td><strong>Estado </strong></td>
								<td><span t-field='o.state_id' /> </td>
								<td><strong>Cantidad de Casas</strong></td>
								<td><span t-esc='o.totalCas()' /></td>
							</tr>
							<tr>
								<td><strong>Municipio </strong></td>
								<td><span t-field='o.municipality_id' /> </td>
								<td><strong>Cantidad de Edificios</strong></td>
								<td><span t-esc='o.totalEdf()' /></td>
							</tr>
							<tr>
								<td><strong>Parroquia </strong></td>
								<td><span t-field='o.parish_id' /></td>
								<td><strong>Cantidad de Familias</strong></td>
								<td><span t-esc='o.totalFam()' /></td>
							</tr>
							<tr>
								<td><strong>Sector </strong></td>
								<td><span t-field='o.sector_id' /> </td>
								<td><strong>Distribuciones</strong></td>
								<td><span t-esc='o.totalDis()' /></td>
							</tr>
                        </table>
                        <br/>
                        <br/>
                   </div>
                </t>
            </t>
        </t>
    </template>
</odoo>

