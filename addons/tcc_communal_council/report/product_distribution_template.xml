<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_distribution">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="report.internal_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row mt32 mb32">
                            <div class="col-xs-6">
                                <strong>Consejo Comunal</strong><br/>
                                <span t-field="o.communal_council_id.name"/>
                            </div>
                        </div>
                        <div class="row mt32 mb32">
                            <div class="col-xs-6">
                                <strong>Nombre</strong><br/>
                                <span t-field="o.name"/>
                            </div>
                        </div>
                        <div class="row mt32 mb32">
                            <div class="col-xs-12">
                                <strong>Descripci√≥n</strong><br/>
                                <span t-field="o.description"/>
                            </div>
                        </div>
                        <div class="row mt32 mb32">
                            <div class="col-xs-3">
                                <strong>Inicio de entrega</strong><br/>
                                <span t-field="o.date_start"/>
                            </div>
                            <div class="col-xs-3">
                                <strong>Fin de entrega</strong><br/>
                                <span t-field="o.date_end"/>
                            </div>
                        </div>
                        <div t-if="o.distribution_line_ids">
                            <table class="table table-condensed">
                                <tr>
                                    <td class="text-left"><strong>Responsable</strong></td>
                                    <td class="text-left"><strong>Calle</strong></td>
                                    <td class="text-left"><strong>Familia</strong></td>
                                    <td class="text-left"><strong>Persona</strong></td>
                                </tr>
                                <tr t-foreach="o.distribution_line_ids" t-as="line2">
                                    <td class="text-left"><span t-field="line2.responses_ids.name"/></td>
                                    <td class="text-left"><span t-field="line2.street_ids.name"/></td>
                                    <td class="text-left"><span t-field="line2.family_ids.name"/></td>
                                    <td class="text-left"><span t-field="line2.person_ids.name"/></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
