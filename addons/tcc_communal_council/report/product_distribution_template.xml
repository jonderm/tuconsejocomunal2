<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="product_distribution">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="report.internal_layout">
                    <div class="page">
                        <div class="oe_structure"/>
                        <div class="row mt32 mb32">
                            <div class="col-xs-12">
                                <h3><strong><span t-field="o.communal_council_id"/></strong></h3>
                            </div>
                        </div>
                        <div class="row mt32 mb32">
                            <div class="col-xs-6">
                                <strong>Nombre</strong><br/>
                                <span t-field="o.name"/>
                            </div>
                        </div>
                        <div class="row mt32 mb32">
                            <div class="col-xs-12">
                                <strong>Descripci√≥n</strong><br/>
                                <span t-field="o.description"/>
                            </div>
                        </div>
                        <div class="row mt32 mb32">
                            <div class="col-xs-3">
                                <strong>Inicio de entrega</strong><br/>
                                <span t-field="o.date_start"/>
                            </div>
                            <div class="col-xs-3">
                                <strong>Fin de entrega</strong><br/>
                                <span t-field="o.date_end"/>
                            </div>
                        </div>
                        <div t-if="o.distribution_line_ids">
                            <table class="table table-condensed">
                                <tr>
                                    <td class="text-left"><h6><strong>Responsables</strong></h6></td>
                                    <td class="text-left"><h6><strong>Calles</strong></h6></td>
                                    <td class="text-left"><h6><strong>Familias</strong></h6></td>
                                    <td class="text-left"><h6><strong>Personas</strong></h6></td>
                                </tr>
                                <tr t-foreach="o.distribution_line_ids" t-as="answers">
                                    <td class="text-left"><h6><span t-field="answers.responses_ids"/></h6></td>
                                    <td class="text-left"><h6><span t-field="answers.street_ids"/></h6></td>
                                    <td class="text-left"><h6><span t-field="answers.family_ids"/></h6></td>
                                    <td class="text-left"><h6><span t-field="answers.person_ids"/></h6></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
