<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="council_admin_template">
    <t t-call="report.html_container">
        <t t-call="report.internal_layout">
            <div class="page">
                <h2><span t-esc="data['form']['title']"/></h2>
                <div class="row mt32 mb32">
                   
                    <div class="col-xs-9">
                        <strong>Descripci√≥n</strong>:<br/>
                        <small t-esc="data['form']['description']"/>
                    </div>
                    <div class="col-xs-3">
                        <strong>Fecha de Regitro</strong>:<br/>
                        <span t-esc="data['form']['date_init']"/>
                    </div>
                </div>
                 <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th colspan="100">
                                Nombre
                            </th >
                            <th colspan="100">
                                Fecha
                            </th>
                            <th colspan="100">
                                Estado
                            </th>
                            <th colspan="100">
                                Cant. Familia
                            </th>
                            <th colspan="100">
                                Cant. Personas
                            </th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="data['communals_data']" t-as="communal">
                            <tr>
                                <td colspan="100">
                                    <small t-esc="communal['name']"/>
                                </td>
                                <td colspan="100">
                                    <small t-esc="communal['creation_date']"/>
                                </td>
                                <td colspan="100">
                                    <small t-esc="communal['state_id'][1]"/>
                                </td>
                                <td colspan="100">
                                    Proximos videos
                                </td>
                                <td colspan="100">
                                    Proximos videos
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

            </div>
        </t>
    </t>
</template>
</odoo>
