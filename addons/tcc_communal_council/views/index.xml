<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="index">
			<t t-call="website.layout">
				<div id="wrap">
					<div class="oe_structure">
						<seccion class="container">
							<title>Hola Mundo</title>
							<h1 align="center">Registro de los Consejos Comunales</h1>

							<form action="/register/communalcouncil/" method="POST" class="form-horizontal mt32" enctype="multipart/form-data"  align="center">
								<div t-attf-class="form-group #{error and 'Nombre' and 'hash-error' or ''}">
									<label class="col-md-3 col-sm-4" for="name">Nombre del Consejo Comunal</label>
									<div class="col-md-7 col-sm-8">
									<record id="consejo" model="tcc.communal.council">
            							<field name="name">
										<input type="text" class="form-control" name="name" t-attf-value="#{name or ''}"/>
									</field>
        							</record>
									</div>
								</div>


								<div t-attf-class="form-group #{error and 'Nombre' and 'hash-error' or ''}">
									<label class="col-md-3 col-sm-4" for="name">Correo Electronico</label>
									<div class="col-md-7 col-sm-8">
									<record id="consejo" model="tcc.communal.council">
            							<field name="name">
            								<input type="email" class="form-control" name="login" t-attf-value="#{name or ''}"/>
            							</field>
        							</record>
										
									</div>
								</div>
								<div t-attf-class="form-group #{error and 'Nombre' and 'hash-error' or ''}">
									<label class="col-md-3 col-sm-4" for="name">Codigo SITUR</label>
									<div class="col-md-7 col-sm-8">
										<input type="text" class="form-control" name="situr_code" t-attf-value="#{name or ''}"/>
									</div>
								</div>
								<div t-attf-class="form-group #{error and 'Nombre' and 'hash-error' or ''}">
									<label class="col-md-3 col-sm-4" for="name">Fecha de Creacion</label>
									<div class="col-md-7 col-sm-8">
										<input type="date" class="form-control" name="creation_date" t-attf-value="#{name or ''}"/>
									</div>
								</div>
								<div t-attf-class="form-group #{error and 'Nombre' and 'hash-error' or ''}">
									<label class="col-md-3 col-sm-4" for="name">RIF</label>
									<div class="col-md-7 col-sm-8">
										<input type="text" class="form-control" name="rif" placeholder="C-00000000-0" t-attf-value="#{name or ''}"/>
									</div>
								</div>
								<div t-attf-class="form-group #{error and 'Nombre' and 'hash-error' or ''}">
									<label class="col-md-3 col-sm-4" for="name">Telefono</label>
									<div class="col-md-7 col-sm-8">
										<input type="phone" class="form-control" name="phone" placeholder="0212-1234567" t-attf-value="#{name or ''}"/>
									</div>
								</div>
								<div t-attf-class="form-group #{error and 'Nombre' and 'hash-error' or ''}">
									<label class="col-md-3 col-sm-4" for="name">Estado</label>
									<div class="col-md-7 col-sm-8">
										<t t-foreach="countries" t-as="country">
											<t t-if="country.id  == 240">
												<select class="form-control" name="state_id">
													<t t-foreach="states" t-as="state">               	                  
													<option t-if="state.country_id  == country"><t t-esc="state.name" /></option>                    
					                        		</t>
													</select>
											</t>
										</t>
										
									</div>
								</div>
								<div t-attf-class="form-group #{error and 'Nombre' and 'hash-error' or ''}">
									<label class="col-md-3 col-sm-4" for="name">Municipio</label>
									<div class="col-md-7 col-sm-8">
										<select class="form-control" name="municipality_id">
											<t t-foreach="municipalities" t-as="municipality">
					                            
					                            <option t-if="state  == state"><t t-esc="municipality.name" /></option>
					                        	
					                        </t>
										</select>
									</div>
								</div>
								<div t-attf-class="form-group #{error and 'Nombre' and 'hash-error' or ''}">
									<label class="col-md-3 col-sm-4" for="name">Parroquia</label>
									<div class="col-md-7 col-sm-8">
										<select class="form-control" name="parish_id">
											<t t-foreach="parishes" t-as="parish">
					                            
					                            <option t-if="municipality ==  municipality"><t t-esc="parish.name" /></option>
					                        	
					                        </t>
										</select>
									</div>
								</div>
								<div t-attf-class="form-group #{error and 'Nombre' and 'hash-error' or ''}">
									<label class="col-md-3 col-sm-4" for="name">Sector</label>
									<div class="col-md-7 col-sm-8">
										<input type="text" class="form-control" name="sector_id" t-attf-value="#{name or ''}"/>
									</div>
								</div>
								<div class="form-group">
									<div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
										<button class="btn btn-primary btn-lg" name="submit" type="submit">Registrar Consejo Comunal</button>
									</div>
								</div>
							</form>
						</seccion>
					</div>
				</div>
			</t>
		</template>
	</data>
</odoo>